    { "type": "color", "id": "button_text_hover", "label": "Hover: texto", "default": "#ffffff" },
    { "type": "color", "id": "button_border_hover", "label": "Hover: borde", "default": "#000000" },

    { "type": "header", "content": "Espaciado" },
    { "type": "range", "id": "image_width_desktop", "label": "Desktop: ancho imagen", "min": 30, "max": 100, "step": 5, "unit": "%", "default": 100 },
    { "type": "range", "id": "image_width_mobile", "label": "Mobile: ancho imagen", "min": 40, "max": 100, "step": 5, "unit": "%", "default": 100 },

