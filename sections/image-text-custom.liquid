    { "type": "range", "id": "text_margin_bottom_mobile", "label": "Mobile: margen inferior texto", "min": 0, "max": 80, "step": 4, "unit": "px", "default": 0 }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "Título",
      "limit": 1,
      "settings": [
        { "type": "richtext", "id": "text", "label": "Contenido", "default": "<p>Escribe aquí tu título.</p>" }
      ]
    },
    {
      "type": "body",
      "name": "Texto",
      "limit": 1,
      "settings": [
        { "type": "richtext", "id": "text", "label": "Contenido", "default": "<p>Escribe aquí tu texto.</p>" }
      ]
    },
    {
      "type": "button",
      "name": "Botón",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "label", "label": "Texto botón", "default": "Ver más" },
        { "type": "url", "id": "link", "label": "Enlace" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image + Text (Custom)",
      "blocks": [
        { "type": "title" },
        { "type": "body" },
        { "type": "button" }
      ]
    }
  ]
}
