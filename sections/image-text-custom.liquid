{% liquid
  assign media_position_desktop = section.settings.media_position_desktop
  assign mobile_order = section.settings.mobile_order

  assign text_align_desktop = section.settings.text_align_desktop
  assign text_align_mobile = section.settings.text_align_mobile

  assign v_align_desktop = section.settings.v_align_desktop
  assign v_align_mobile = section.settings.v_align_mobile

  assign image_align_desktop = section.settings.image_align_desktop
  assign image_align_mobile = section.settings.image_align_mobile
%}

<section
  class="itc itc-{{ section.id }}"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  <div class="itc__inner">
    <div
      class="
        itc__grid
        itc__grid--desktop-{{ media_position_desktop }}
        itc__grid--mobile-{{ mobile_order }}
        itc__valign-desktop-{{ v_align_desktop }}
        itc__valign-mobile-{{ v_align_mobile }}
      "
      style="gap: {{ section.settings.gap }}px;"
    >
      <!-- MEDIA -->
      <div
        class="
          itc__media
          itc__media-align-desktop-{{ image_align_desktop }}
          itc__media-align-mobile-{{ image_align_mobile }}
        "
      >
        {% if section.settings.image != blank %}
          {{ section.settings.image
            | image_url: width: 1800
            | image_tag: loading: 'lazy', class: 'itc__img', alt: section.settings.image.alt | default: ''
          }}
        {% else %}
          <div class="itc__media-placeholder"></div>
        {% endif %}
      </div>

      <!-- TEXT -->
      <div
        class="itc__text itc__text-align-desktop-{{ text_align_desktop }} itc__text-align-mobile-{{ text_align_mobile }}"
        style="
          margin-top: {{ section.settings.text_margin_top_desktop }}px;
          margin-bottom: {{ section.settings.text_margin_bottom_desktop }}px;
        "
      >
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'title' %}
              <div class="itc__heading" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>

            {% when 'body' %}
              <div class="itc__rte" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>

            {% when 'button' %}
              {% if block.settings.label != blank %}
                {% if block.settings.link != blank %}
                  <a class="itc__btn" href="{{ block.settings.link }}" {{ block.shopify_attributes }}>
                    {{ block.settings.label | escape }}
                  </a>
                {% else %}
                  <span class="itc__btn" {{ block.shopify_attributes }}>
                    {{ block.settings.label | escape }}
                  </span>
                {% endif %}
              {% endif %}
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  .itc-{{ section.id }}{
    --itc-title-size: {{ section.settings.title_font_size }}px;
    --itc-body-size: {{ section.settings.body_font_size }}px;

    --itc-btn-font-size: {{ section.settings.button_font_size }}px;
    --itc-btn-pad-y: {{ section.settings.button_padding_y }}px;
    --itc-btn-pad-x: {{ section.settings.button_padding_x }}px;

    --itc-btn-bg: {{ section.settings.button_bg }};
    --itc-btn-text: {{ section.settings.button_text }};
    --itc-btn-border: {{ section.settings.button_border }};
    --itc-btn-border-width: {{ section.settings.button_border_width }}px;

    --itc-btn-bg-hover: {{ section.settings.button_bg_hover }};
    --itc-btn-text-hover: {{ section.settings.button_text_hover }};
    --itc-btn-border-hover: {{ section.settings.button_border_hover }};
  }

  .itc-{{ section.id }} .itc__inner{
    width: min(1200px, calc(100% - 40px));
    margin: 0 auto;
  }

  /* GRID */
  .itc-{{ section.id }} .itc__grid{
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  /* Desktop image position */
  .itc-{{ section.id }} .itc__grid--desktop-left  .itc__media{ order: 1; }
  .itc-{{ section.id }} .itc__grid--desktop-left  .itc__text { order: 2; }
  .itc-{{ section.id }} .itc__grid--desktop-right .itc__media{ order: 2; }
  .itc-{{ section.id }} .itc__grid--desktop-right .itc__text { order: 1; }

  /* Vertical align desktop */
  .itc-{{ section.id }} .itc__valign-desktop-top{ align-items: start; }
  .itc-{{ section.id }} .itc__valign-desktop-center{ align-items: center; }
  .itc-{{ section.id }} .itc__valign-desktop-bottom{ align-items: end; }

  /* MEDIA */
  .itc-{{ section.id }} .itc__media{
    width: {{ section.settings.image_width_desktop }}%;
    border-radius: {{ section.settings.media_radius }}px;
    overflow: hidden;
    background: {{ section.settings.media_bg }};
    min-height: 260px;
  }

  /* Image horizontal alignment desktop */
  .itc-{{ section.id }} .itc__media-align-desktop-left{ margin-right: auto; }
  .itc-{{ section.id }} .itc__media-align-desktop-center{ margin-left: auto; margin-right: auto; }
  .itc-{{ section.id }} .itc__media-align-desktop-right{ margin-left: auto; }

  .itc-{{ section.id }} .itc__img{
    width: 100%;
    height: 100%;
    object-fit: {{ section.settings.image_fit }};
    display:block;
  }

  .itc-{{ section.id }} .itc__media-placeholder{
    width: 100%;
    height: 100%;
    min-height: 260px;
    background: repeating-linear-gradient(
      45deg,
      rgba(0,0,0,0.05),
      rgba(0,0,0,0.05) 10px,
      rgba(0,0,0,0.08) 10px,
      rgba(0,0,0,0.08) 20px
    );
  }

  /* TEXT */
  .itc-{{ section.id }} .itc__text{
    display:flex;
    flex-direction: column;
    gap: 12px;
  }

  /* Text align desktop */
  .itc-{{ section.id }} .itc__text-align-desktop-left{ text-align:left; align-items:flex-start; }
  .itc-{{ section.id }} .itc__text-align-desktop-center{ text-align:center; align-items:center; }
  .itc-{{ section.id }} .itc__text-align-desktop-right{ text-align:right; align-items:flex-end; }

  /* Richtext spacing + sizes */
  .itc-{{ section.id }} .itc__heading{ font-size: var(--itc-title-size); }
  .itc-{{ section.id }} .itc__heading p{ margin: 0; }

  .itc-{{ section.id }} .itc__rte{ font-size: var(--itc-body-size); }
  .itc-{{ section.id }} .itc__rte p{ margin: 0; }

  /* BUTTON (editable) */
  .itc-{{ section.id }} .itc__btn{
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: fit-content;

    font-size: var(--itc-btn-font-size);
    padding: var(--itc-btn-pad-y) var(--itc-btn-pad-x);

    background: var(--itc-btn-bg);
    color: var(--itc-btn-text);
    border: var(--itc-btn-border-width) solid var(--itc-btn-border);
    border-radius: {{ section.settings.button_radius }}px;

    text-decoration: none;
    cursor: pointer;
    transition: background .2s ease, color .2s ease, border-color .2s ease, opacity .2s ease;
  }

  .itc-{{ section.id }} a.itc__btn:hover{
    background: var(--itc-btn-bg-hover);
    color: var(--itc-btn-text-hover);
    border-color: var(--itc-btn-border-hover);
  }

  /* MOBILE */
  @media (max-width: 749px){
    .itc-{{ section.id }} .itc__grid{
      grid-template-columns: 1fr;
    }

    /* Mobile order */
    .itc-{{ section.id }} .itc__grid--mobile-media_first .itc__media{ order: 1; }
    .itc-{{ section.id }} .itc__grid--mobile-media_first .itc__text { order: 2; }
    .itc-{{ section.id }} .itc__grid--mobile-text_first  .itc__media{ order: 2; }
    .itc-{{ section.id }} .itc__grid--mobile-text_first  .itc__text { order: 1; }

    /* Text align mobile */
    .itc-{{ section.id }} .itc__text-align-mobile-left{ text-align:left; align-items:flex-start; }
    .itc-{{ section.id }} .itc__text-align-mobile-center{ text-align:center; align-items:center; }
    .itc-{{ section.id }} .itc__text-align-mobile-right{ text-align:right; align-items:flex-end; }

    /* Vertical align mobile */
    .itc-{{ section.id }} .itc__valign-mobile-top{ align-items: start; }
    .itc-{{ section.id }} .itc__valign-mobile-center{ align-items: center; }
    .itc-{{ section.id }} .itc__valign-mobile-bottom{ align-items: end; }

    /* Mobile image sizing */
    .itc-{{ section.id }} .itc__media{
      width: {{ section.settings.image_width_mobile }}%;
    }

    /* Image horizontal alignment mobile */
    .itc-{{ section.id }} .itc__media-align-mobile-left{ margin-right: auto; }
    .itc-{{ section.id }} .itc__media-align-mobile-center{ margin-left: auto; margin-right: auto; }
    .itc-{{ section.id }} .itc__media-align-mobile-right{ margin-left: auto; }

    /* Mobile text margins */
    .itc-{{ section.id }} .itc__text{
      margin-top: {{ section.settings.text_margin_top_mobile }}px !important;
      margin-bottom: {{ section.settings.text_margin_bottom_mobile }}px !important;
    }
  }
</style>

{% schema %}
{
