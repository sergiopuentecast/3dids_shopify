  "class": "ui-test-image-text-custom",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Imagen" },

    {
      "type": "select",
      "id": "media_position_desktop",
      "label": "Desktop: posición imagen",
      "options": [
