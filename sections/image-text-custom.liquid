      "default": "left"
    },
    {
      "type": "select",
      "id": "mobile_order",
      "label": "Mobile: orden",
      "options": [
        { "value": "media_first", "label": "Imagen arriba, texto abajo" },
        { "value": "text_first", "label": "Texto arriba, imagen abajo" }
      ],
      "default": "media_first"
    },

    { "type": "header", "content": "Alineación texto" },
    {
      "type": "select",
      "id": "text_align_desktop",
      "label": "Desktop: alineación texto",
      "options": [
        { "value": "left", "label": "Izquierda" },
