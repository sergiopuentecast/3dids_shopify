    { "type": "range", "id": "button_radius", "label": "Border radius botón", "min": 0, "max": 40, "step": 1, "unit": "px", "default": 10 },
    { "type": "range", "id": "button_border_width", "label": "Grosor borde botón", "min": 0, "max": 10, "step": 1, "unit": "px", "default": 1 },

    { "type": "color", "id": "button_bg", "label": "Fondo botón", "default": "#111111" },
